@page "/booklist"
@inherits BookListBase

@if (bookList == null)
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var books in bookList)
        {
            <div class="col">
                <div class="card h-100 rounded-3 shadow-lg border-0 transition-transform transform-hover">
                    <!-- Staff Photo or Placeholder -->
                    @* <img class="card-img-top" style="object-fit: cover; height: 200px; border-radius: 10px;" src="@staff.Photo" onerror="this.onerror=null;this.src='/images/placeholder.jpg';" /> *@
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark font-weight-bold">@books.BookName</h5>
                        @* <p class="card-text text-muted">@staff.Position</p> *@
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <a href="@($"bookdetails/{books.BookNo}")" 
                               class="btn btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover" 
                               style="background-color: #B9E5E8; color: #000000;">View</a>
                            <a href="@($"editbook/{books.BookNo}")" 
                               class="btn btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover" 
                               style="background-color: #7AB2D3; color: #FFFFFF;">Edit</a>
                            <a href="@($"/delete/{books.BookNo}")" 
                               class="btn btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover" 
                               style="background-color: #4A628A; color: #FFFFFF;">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
